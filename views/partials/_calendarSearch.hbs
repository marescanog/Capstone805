<div class="search-bar-container">
    <form class="calender-form-style" id="search-form">
        <div class="calender-group-1">
            <div class="form-group">
                <label for="checkInDisplay" class="form-label">check-in</label>
                <input type="text" class="form-control" id="checkInDisplay" name="checkin" required readonly>
                <div class="invalid-feedback">
                    Select a check in date
                </div>
            </div>
            <div class="form-group">
                <label for="checkOutDisplay" class="form-label">check-out</label>
                <input type="text" class="form-control" id="checkOutDisplay" name="checkout" required readonly>
                <div class="invalid-feedback">
                Select a check out date
                </div>
            </div>
        </div>
        <div class="calender-group-1">
            <div class="form-group">
                <label for="guests" class="form-label">guests</label>
                <input type="number" class="form-control" id="guests" name="guests" required min="1" max="10">
                <div class="invalid-feedback">
                    Select a number of guests
                </div>
            </div>
            <div class="form-group">
                <label for="rooms" class="form-label">rooms</label>
                <input type="number" class="form-control" id="rooms" name="rooms" required  min="1" max="10">
                <div class="invalid-feedback">
                    Select a number of rooms
                </div>
            </div>
        </div>
        <div>
            <button type="button" id="submit-search" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

