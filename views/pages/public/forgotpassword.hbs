<div class="forgotpasswordwrapper">
    <div class="container mt-5">
        <div id="forgot-password-form">
            <h2>Forgot Password</h2>
            <form id="password-reset-form">
                <div class="form-group">
                    <label for="userEmail">Email address</label>
                    <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Enter email" required>
                    <small id="emailHelp" class="form-text text-muted">We'll send you a link to reset your password.</small>
                </div>
                <button type="submit" class="btn btn-primary">Send Password Reset Link</button>
            </form>
        </div>
        <div id="email-sent-confirmation">
            <h4>Email Sent!</h4>
            <p>Please check your inbox for the password reset link.</p>
        </div>
    </div>
</div>