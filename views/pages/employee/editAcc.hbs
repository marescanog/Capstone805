<div class="dashboard-page-container">
    <div class="dashboard-page-wrapper">
        <div class="dashboard-page-content-container">
            {{> _accountInfoSideBar img=sidebarData.img firstName=sidebarData.firstName lastName=sidebarData.lastName employeeType=sidebarData.employeeType 
                emailAddress=sidebarData.emailAddress address=sidebarData.address mobileNumber=sidebarData.mobileNumber urlPassword="/dashboard/staff/changePassword"
                urlPhoto="/dashboard/staff/updatePhoto" editMode='true'
                }}
            <div class="dashboard-main-section-container">
                {{> _h1styled headerTitle=headerTitle}}

                {{#equal headerTitle "Edit Account Details"}}
                    <form>
                        <div class="row g-3">
                            <div class="col">
                                <label for="FirstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" placeholder="First name" aria-label="First name"
                                    required>
                            </div>
                            <div class="col">
                                <label for="LastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" placeholder="Last name" aria-label="Last name"
                                    required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword5" class="form-label">Mobile Number</label>
                            <input type="password" id="inputPassword5" class="form-control"
                                placeholder="Enter your number only" aria-describedby="passwordHelpBlock">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword5" class="form-label">Address *</label>
                            <input type="password" id="inputPassword5" class="form-control" placeholder="Address"
                                aria-describedby="passwordHelpBlock" required>
                        </div>
                        <div class="col">
                            <label for="City" class="form-label">City *</label>
                            <input type="text" class="form-control" placeholder="City" aria-label="First name" required>
                        </div>
                        <div class="col">
                            <label for="postalCode" class="form-label">Postal Code *</label>
                            <input type="text" class="form-control" placeholder="Postal Code" aria-label="Postal Code"
                                required>
                        </div>
                        <div class="col-md-4">
                            <label for="inputState" class="form-label">Country?Region</label>
                            <select id="inputState" class="form-select">
                                <option selected>Choose...</option>
                                <option>...</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-outline-dark me-md-2" type="button">Cancel</button>
                            <button class="btn save-btn" type="button">Save</button>
                        </div>
                    </form>
                {{/equal }}

                {{#equal headerTitle "Update Photo"}}
                    <div class="container mt-5">
                        <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="input-group mb-3">
                            <input type="file" class="form-control" id="inputGroupFile02">
                            <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>
                        </div>
                        </div>
                    </div>
                {{/equal }}

                {{#equal headerTitle "Update Password"}}
                    <form>
                        <div class="form-group">
                            <label for="inputPassword5" class="form-label">Old Password *</label>
                            <input type="password" id="inputPassword5" class="form-control" aria-describedby=""
                            required>

                        </div>
                        <div class="form-group">
                            <label for="inputPassword5" class="form-label">New Password *</label>
                            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock"
                            required>

                        </div>
                        <div class="form-group">
                            <label for="inputPassword5" class="form-label">Verify New Password *</label>
                            <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock"
                            required>

                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-outline-dark me-md-2" type="button">Cancel</button>
                            <button class="btn save-btn" type="button">Save</button>
                        </div>
                    </form>
                {{/equal }}
            </div>
        </div>
    </div>
</div>