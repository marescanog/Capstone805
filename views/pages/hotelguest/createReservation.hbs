<div class="page-wrapper-flex">
    <div class="create-acc-page-container">
        <div class={{#if disablePaymentSidebar}}"create-acc-center-container"{{/if}}{{#unless disablePaymentSidebar}}"pa-right-container"{{/unless}}>
            <div {{#if disablePaymentSidebar}}class="createAccCenter"{{/if}}>
                <div class="breadCrumbs-wrapper">
                    <div class="breadCrumbs-container">
                        {{> _breadcrumbs}}
                    </div>
                </div>
                {{> _h1styled headerTitle="Guest Information"}}
                <div class="subheader-container">
                    <p class="create-acc-p-subheader-style {{#if disablePaymentSidebar}}text-center{{/if}}">Reserve your room now! Enter your details to proceed.</p>
                </div>
                <div class="row justify-content-left">
                        
                    <form id="reservationForm">
                    {{!-- <form id="reservationForm" action="/createReservation" method="post"> --}}

                        <div class="form-section" id="section1">
                            <div class="card" id="guestInfoContents">
                                 {{> formContents/_guestInfo guestInfo=guestInfo}}
                            </div>
                            <div class="card mt-4">
                                 {{> formContents/_additionalInfo}}
                            </div>
                            <button type="button" class="button btn-primary next-button mt-4" id="button_s1">Next: Enter Payment ></button>
                        </div>
            
                        <div class="form-section hidden" id="section2">
                            <div class="card">
                                {{> formContents/_paymentInfo}}
                            </div>
                            <div>
                                <button type="button" class="button btn-primary next-button" id="button_s2_back">< Back</button>
                                <button type="button" class="button btn-primary next-button" id="button_s2">Next: Review ></button>
                            </div>
                        </div>
                                                
                        <div class="form-section hidden" id="section3">
                            <div class="card">
                                <h1 class="text-justify mb-4 form-header-style">Review Information</h1>

                                <div>
                                    <h6>Main Guest Details</h6>
                                    <p>First Name: <span id="reviewfirstName"></span></p>
                                    <p>Last Name: <span id="reviewlastName"></span></p>
                                    <p>Mobile Number: <span id="reviewmobileNumber"></span></p>

                                    <h6>Main Guest address</h6>
                                    <p>Address: <span id="reviewaddress"></span></p>
                                    <div>
                                        <p>City: <span id="reviewcity"></span></p>
                                        <p>Postal Code: <span id="reviewpostalCode"></span></p>
                                    </div>
                                    <p>Country: <span id="reviewcountry"></span></p>
                                </div>

                                <div>
                                    <h6>Additional info</h6>
                                    <p>Special Request: <span id="reviewspecialRequest"></span></p>
                                    <p>Arrival Time: <span id="reviewarrivalTime"></span></p>
                                </div>

                                <div>
                                    <h6>Payment info</h6>
                                    <p>Cardhodler Name: <span id="reviewcardHolderName"></span></p>
                                    <p>Card Number: <span id="reviewcardNumber"></span></p>
                                    {{!-- Code card type detection later --}}
                                    {{!-- <p>type: <span id="reviewarrivalcardType">Mastercard</span></p> --}}
                                    <p>Expiration Date: <span id="reviewexpiryDate"></span></p>

                                    <h6>Billing address</h6>
                                    <p id="sameAddresslabellabellabel">Same as guest address</p>
                                    <div>
                                        <p>Address: <span id="reviewbillingAddress"></span></p>
                                        <div>
                                            <p>City: <span id="reviewbillingCity"></span></p>
                                            <p>Postal Code: <span id="reviewbillingPostal"></span></p>
                                        </div>
                                        <p>Country: <span id="reviewbillingcountry"></span></p>
                                    </div>
                                </div>
                                    <input type="hidden" name="loyaltyCheck" id="loyaltyCheck_DOM_El" value="unchecked">
                                    <input type="hidden" name="loyaltyValue" id="loyaltyValue_DOM_El" value="10">
                                <div>
                                    <h6>Terms & Hotel Policy</h6>
                                    <a href="">Terms & Conditions</a>
                                    <a href="">Policy Description</a>
                                    <p>By completing the reservation, you are confirming that you have read and agreed to the Terms & Conditions and Hotel Policy.</p>
                                </div>
                            </div>
                            <div>
                                <button type="button" class="button btn-primary next-button" id="btn_3Section_back">< Back</button>
                                <button type="button" class="button btn-primary next-button" id="submitButton">COMPLETE RESERVATION</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        {{> _paymentSidebar disable=disablePaymentSidebar}}
    </div>
</div>


