<div class="dashboard-page-container">
    <div class="dashboard-page-wrapper">
        <div class="dashboard-page-content-container">
            {{> _accountInfoSideBar img=sidebarData.img firstName=sidebarData.firstName lastName=sidebarData.lastName employeeType=sidebarData.employeeType 
                emailAddress=sidebarData.emailAddress address=sidebarData.address mobileNumber=sidebarData.mobileNumber urlPassword="/dashboard/guest/update-password"
                urlPhoto="/dashboard/guest/upload-photo" urlEmail="/dashboard/guest/update-email"
            }}

            <div class="dashboard-main-section-container">
                
              <div class="mt-5 mb-5">

                    <div class="row">
                      <div class="col-md-8">
                        <div>
                            <div>
                                <h2 class="dash-h2-style">Hello, {{sidebarData.firstName}} {{sidebarData.lastName}}.</h2>
                            </div>
                            <a href="/dashboard/guest/editacccount"><button type="button" class="btn btn-outline-primary">Edit Profile</button></a>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <p class="fs-5">You earned <br><strong class="fs-3">100 points</strong></p>
                        <p class="fs-7">Unlock your rewards! Book now and redeem your points</p>
                        <a href="/dashboard/guest/loyalty-history">View points history</a>
                      </div>
                    </div>
                    <div class="">
                      {{#unless reservations}}
                        <div>
                          <p>You have no upcoming reservations</p>
                        </div>
                      {{/unless }}
                      {{#if reservations}}
                      <section class="autoplay slider slick-slider">
                        {{#each reservations}}
                          <a href="{{this.url}}">
                            <div>
                              <div class="slick-item">
                                <img src="../../../assets/images/room1.jpg">
                                <p class="absolute-text">{{this.interval}}</p>
                              </div>
                              <div>
                                <h5>{{this.roomtType}}</h5>
                                <p>{{this.checkIn}} - {{this.checkOut}}</p>
                              </div>
                            </div>
                          </a>
                        {{/each}}                        
                      </section>
                      {{/if }}
                      <hr>
                      <div class="dashboard-main-bottom">
                            {{> _accountButtonList buttonData=buttonData}}
                      </div>
                    </div>

              </div>

            </div>
        </div>
    </div>
</div>



