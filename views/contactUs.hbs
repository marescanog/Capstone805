<!-- views/contact.hbs -->
<div class="contact-page-container">
    <div class="contact-info-container">
        <h1>Contact Us</h1>
        <p>Thank you for reaching out to us! We aim to reply to all inquiries within 24 hours.</p>

        <div class="contact-details">
            <h2>Reservations and General Inquiries</h2>
            <p>Phone: 123-456-7890</p>
            <p>Email: company@example.com</p>

            <h2>Business Hours</h2>
            <p>Front Desk: 24/7</p>
            <p>Customer Support: Monday - Friday, 8:00 AM - 10:00 PM</p>

            <h2>Address</h2>
            <p>Hotel Name</p>
            <p>Street Address</p>
            <p>City, Province, Postal Code</p>
        </div>
    </div>

    <div class="feedback-form-container">
        <h2>Your Feedback Matters</h2>
        <p>If you prefer, you can also reach us by filling out our contact form, and a team member will respond to you as soon as possible.</p>
        
        <form id="contactForm" action="/submit-feedback" method="POST">
            <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            
            <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
                <label for="mobileNumber">Mobile Number</label>
                <input type="tel" id="mobileNumber" name="mobileNumber">
            </div>
            
            <div class="form-group">
                <label for="inquiry">Give Your Inquiry a Title</label>
                <input type="text" id="inquiry" name="inquiry">
            </div>
            
            <div class="form-group inline-form-group">
                <label for="message">What can we help you with?</label>
                <textarea id="message" name="message" required></textarea>
            </div>
            
            <button type="submit">Submit</button>
        </form>
    </div>

