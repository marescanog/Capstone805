{
  "name": "capstone",
  "version": "1.0.0",
  "description": "A hotel booking website",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server.js",
    "start:dev": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "test:openHandles": "jest --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "mongoose": "^8.2.0",
    "sweetalert2": "^11.10.5",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results",
          "outputName": "jest_results.xml"
        }
      ]
    ]
  }
}
